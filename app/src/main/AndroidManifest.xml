<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Optional: For recording audio with video -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Optional: For saving recordings -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Permission for overlay window (floating camera) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Permission for foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />

    <!-- Camera features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <!-- PiP support -->
    <uses-feature android:name="android.software.picture_in_picture" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OBS">

        <!-- Splash Activity - Launcher -->
        <activity
            android:name="com.obs.mobile.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.OBS.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activity -->
        <activity
            android:name="com.obs.mobile.MainMenuActivity"
            android:exported="false" />

        <!-- Camera Activity with PiP support -->
        <activity
            android:name="com.obs.mobile.CameraActivity"
            android:exported="false"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:supportsPictureInPicture="true"
            android:screenOrientation="portrait" />

        <!-- Sensors Activity -->
        <activity
            android:name="com.obs.mobile.SensorsActivity"
            android:exported="false" />

        <!-- Scenes Activity -->
        <activity
            android:name="com.obs.mobile.ScenesActivity"
            android:exported="false" />

        <!-- Floating Camera Service -->
        <service
            android:name="com.obs.mobile.FloatingCameraService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="camera" />

    </application>

</manifest>